<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:paddingBottom="10dp">
        <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:id="@+id/layout">
            <ProgressBar android:id="@+id/refreshing" style="@style/customProgressBar"/>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tip" android:layout_gravity="center"/>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/lastUpdate" android:layout_gravity="center" android:textSize="12sp"/>
        </LinearLayout>
        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerVertical="true" android:id="@+id/arrow" android:src="@drawable/pull_to_refresh_arrow" android:contentDescription="@string/d" android:layout_toLeftOf="@id/layout" android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <ImageView android:layout_height="wrap_content" android:layout_width="match_parent" android:contentDescription="@string/d" android:background="@drawable/h_line"/>
</LinearLayout>