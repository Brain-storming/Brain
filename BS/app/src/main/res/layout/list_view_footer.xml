<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:text="@string/load_full" android:padding="5dp" android:id="@+id/loadFull"/>

    <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="gone" android:text="@string/no_data" android:padding="5dp" android:id="@+id/noData"/>

    <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/more" android:padding="5dp" android:id="@+id/more"/>

    <ProgressBar android:id="@+id/loading" style="@style/customProgressBar"/>
</LinearLayout>