<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/option_bg">
    <LinearLayout
        android:id="@+id/linearLayout1" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15sp">
        <ImageButton
            android:id="@+id/yinxiaoButton"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="150sp"
            android:background="@anim/musicoption" />
    	<ImageButton
       	 	android:id="@+id/gerenButton"
        	android:layout_width="138dp"
       		android:layout_height="wrap_content"
         	android:layout_marginLeft="10sp"
        	android:layout_marginTop="150sp"
        	android:background="@anim/messageoption">   	    
    	</ImageButton>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90sp">
    	<ImageView
    	    android:id="@+id/shengyin" 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="50sp"
        	android:layout_marginLeft="100sp"
        	android:background="@drawable/option_word_sound"/>
    	<ImageButton
    	    android:id="@+id/switchButton1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="45sp"
    	    android:layout_marginTop="50sp"/>

    </LinearLayout>
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:orientation="horizontal">
    	<ImageView
    	    android:id="@+id/yinxiao" 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="100sp"
        	android:layout_marginTop="30sp"
        	android:background="@drawable/option_word_eq"/>
    	<ImageButton
    	    android:id="@+id/switchButton2"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="30sp"
    	    android:layout_marginLeft="45sp"/>
    </LinearLayout>

</LinearLayout>
